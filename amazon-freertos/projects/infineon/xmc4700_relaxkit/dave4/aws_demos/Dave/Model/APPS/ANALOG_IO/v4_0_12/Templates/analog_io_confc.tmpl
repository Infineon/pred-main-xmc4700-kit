  /* Configure the weak pull up /down settings into IOCR register */
  XMC_GPIO_SetMode((XMC_GPIO_PORT_t *)XMC_GPIO_PORT${port},  ${pin}U,  (XMC_GPIO_MODE_t)${mode});
""");
    if(xmc_family4x == 0)
    {
      if(obj.gcombo_pull_device.value == "Hardware Controlled")
      {
        out.print("""
